<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"	
	xmlns:h="urn:import:havis.app.itemchecker.ui.handheld"
	xmlns:w="urn:import:havis.app.itemchecker.ui.handheld.widgets">	
	<ui:with
		type="havis.app.itemchecker.ui.resourcebundle.AppResources"
		field="res" />

	<ui:style>
		.message{
			position:fixed;
			bottom:0;
			left:0;
			right:0;
			border-top: 1px solid lightgray;
			padding:0 4px;
			height:36px;
			line-height:32px;
			overflow:hidden;
			text-overflow:ellipsis;
			padding-left:40px;
		}
		
		.scan,
		.settings{
			position: fixed;
			overflow-y:auto;
			overflow-x:hidden;
			top:48px;
			
		}
		.settings{
			bottom: 107px;
		}
		.scan{			
			bottom: 40px;
		}
	</ui:style>
	
	<g:FlowPanel>		
		<g:FlowPanel ui:field="menuBar" addStyleNames="{res.css.menuBar}"/>
		<w:HavisOfflinePanel ui:field="rootPanel">
			<g:FlowPanel>
				<h:ScanPanelView ui:field="scanPanel" startPage="true" visible="true" addStyleNames="{style.scan}"/>
				<h:SettingsPanelView ui:field="settingsPanel" visible="false" addStyleNames="{style.settings}"/>				
			</g:FlowPanel>
		</w:HavisOfflinePanel>
		<g:Label ui:field="messagePanel" addStyleNames="{style.message}"/>	
	</g:FlowPanel>
</ui:UiBinder> 